    <platform name="ios">
        <preference name="KeyboardDisplayRequiresUserAction" value="false" />
        <config-file parent="NSCalendarsUsageDescription" platform="ios" target="*-Info.plist">
            <string>The app uses calendar to get date of birth with Cordova calendar.</string>
        </config-file>
        <config-file parent="NSPhotoLibraryUsageDescription" platform="ios" target="*-Info.plist">
            <string>The app uses the gallery for uploading profile pictures</string>
        </config-file>
        <config-file parent="NSBluetoothPeripheralUsageDescription" platform="ios" target="*-Info.plist">
            <string>The app does not use bluetooth at th moment.</string>
        </config-file>
        <config-file parent="NSMicrophoneUsageDescription" platform="ios" target="*-Info.plist">
            <string>The app does not use microphone at the moment.</string>
        </config-file>
